doctype html
html(lang="en")
  head
    title Add Task - Jiffi - Life tasks done in a Jiffi
    meta(charset='utf-8')
    meta(name="viewport", content="width=device-width, initial-scale=1")
    link(rel="stylesheet", href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css")
    link(rel="stylesheet", href="https://storage.googleapis.com/jiffi-cloud/static/css/styles.css")
    link(rel="stylesheet", href="https://storage.googleapis.com/jiffi-cloud/static/css/ie10-viewport-bug-workaround.css")
    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
    link(rel="stylesheet", href="https://storage.googleapis.com/jiffi-cloud/static/css/ie10-viewport-bug-workaround.css")
    link(rel="stylesheet", href="https://storage.googleapis.com/jiffi-cloud/static/js/ie-emulation-modes-warning.js")
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    script(src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js")
    script(src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js")
    <![endif]-->

  body
    #fb-root
    script.
      (function(d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) return;
        js = d.createElement(s); js.id = id;
        js.src = "//connect.facebook.net/en_GB/sdk.js#xfbml=1&version=v2.8";
        fjs.parentNode.insertBefore(js, fjs);
      }(document, 'script', 'facebook-jssdk'));

    .navbar.navbar-inverse.navbar-fixed-top
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type="button" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar")
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar

          a.navbar-brand(href="/") Jiffi

        #navbar.navbar-collapse.collapse
          ul.nav.navbar-nav
            li
              a(href="/tasks") Home
            li
              a(href="/Tasks/mine") My Tasks

          p.navbar-form.navbar-right
            // [START profile]
            if profile
              if profile.image
                img.img-circle(src=profile.image, width=24)
                | &nbsp;
                span#user-name #{profile.displayName} &nbsp;
                a(href=logout) (logout)
            else
              a.btn.btn-success(href=login) Login
            // [END profile]

    .jumbotron
      .container
        block content

    .container
      .row
        block article
      hr

      footer
        .col-md-6
          p &copy; 2016 Jiffi
        .col-md-6
          a.btn.btn-block.btn-social.btn-facebook(href="https://facebook.com/jifficloud", target="_blank") 
            span.fa.fa-facebook
            p Like us on Facebook

          #fb-like.fb-like.pull-left(data-href="https://facebook.com/jifficloud", data-layout="standard", data-action="like", data-size="large", data-show-faces="true", data-share="true")

    script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js")
    script(src="https://storage.googleapis.com/jiffi-cloud/static/js/bootstrap.min.js")
    script(src="https://storage.googleapis.com/jiffi-cloud/static/js/ie10-viewport-bug-workaround.js")
